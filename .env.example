# =========================
# Django
# =========================
DJANGO_SETTINGS_MODULE=config.settings.local
DJANGO_ENV_FILE=.env
DJANGO_SECRET_KEY=changeme
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000
DJANGO_TIME_ZONE=UTC
DJANGO_SITE_ID=1
DJANGO_LOGIN_REDIRECT_URL=/
DJANGO_LOGOUT_REDIRECT_URL=/

# Base URL used for sitemap/canonical links in dev
SITE_BASE_URL=http://localhost:8000

# =========================
# Accounts / Auth
# =========================
ACCOUNT_EMAIL_VERIFICATION=optional
ACCOUNT_RATE_LIMIT_LOGIN_FAILED=5/5m
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =========================
# Database & Cache
# Use Postgres by default; override with:
#   DATABASE_URL=sqlite:///db.sqlite3
# =========================
DATABASE_URL=postgres://evthing:password@localhost:5432/evthing
DJANGO_CACHE_URL=locmem://

# =========================
# Static & Media
# =========================
DJANGO_STATIC_URL=/static/
DJANGO_MEDIA_URL=/media/
DJANGO_STATIC_ROOT=/app/staticfiles
DJANGO_MEDIA_ROOT=/app/media

# =========================
# Redis / Celery (optional in MVP)
# =========================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# =========================
# AWS / Storage / Email
# Keep S3/SES disabled for local dev
# =========================
DJANGO_USE_S3_MEDIA=False
AWS_S3_CUSTOM_DOMAIN=
AWS_S3_CACHE_CONTROL=max-age=86400
AWS_QUERYSTRING_AUTH=False
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_STORAGE_BUCKET_NAME=evthing-media

# SES email relay (MVP: toggle with SES_ENABLED)
SES_ENABLED=False
SES_VERIFIED_FROM_EMAIL=no-reply@example.com

# =========================
# Email backend (local = console)
# In production switch when SES_ENABLED=True
# =========================
DEFAULT_FROM_EMAIL="EV Marketplace <no-reply@example.com>"
SERVER_EMAIL="EV Marketplace <no-reply@example.com>"
DJANGO_EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# =========================
# Security (override in production)
# =========================
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False
DJANGO_SECURE_HSTS_SECONDS=0
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=False
DJANGO_SECURE_HSTS_PRELOAD=False

# =========================
# Feature Flags (keep OFF for MVP)
# =========================
FEATURE_SAVED_SEARCHES=False
FEATURE_WATCHLISTS=False

# =========================
# Inquiry / Trust & Safety
# =========================
INQUIRY_RATE_LIMIT_PER_MINUTE=5
# Captcha options: none | turnstile | hcaptcha
CAPTCHA_PROVIDER=none
CAPTCHA_SITE_KEY=
CAPTCHA_SECRET_KEY=

# =========================
# Analytics (optional)
# =========================
ENABLE_ANALYTICS=False
